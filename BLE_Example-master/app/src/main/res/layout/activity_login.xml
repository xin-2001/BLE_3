<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.Login_Activity"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="　　帳號："
                android:textSize="30px"/>

            <EditText
                android:id="@+id/account_edit"
                android:layout_width="match_parent"
                android:ems="12"
                android:maxLength="8"
                android:layout_height="wrap_content"
                android:hint="請輸入帳號"
                android:singleLine="true" />
            <TextView
                android:id="@+id/account_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="　　密碼："
                android:textSize="30px"/>

            <EditText
                android:id="@+id/password_edit"
                android:layout_width="match_parent"
                android:ems="12"
                android:layout_height="wrap_content"
                android:hint="請輸入密碼"
                android:singleLine="true"
                android:inputType="textPassword"/>
            <TextView
                android:id="@+id/password_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/check_pass_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="invisible">
            <TextView
                android:id="@+id/check_pass_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密碼確認："
                android:textSize="30px"/>

            <EditText
                android:id="@+id/check_pass_edit"
                android:layout_width="match_parent"
                android:ems="12"
                android:layout_height="wrap_content"
                android:hint="請再次輸入密碼"
                android:singleLine="true"
                android:inputType="textPassword"/>
            <TextView
                android:id="@+id/check_pass_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:layout_margin="15dp"
                android:visibility="invisible"/>
            <Button
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登入"
                android:layout_margin="15dp"/>
            <Button
                android:id="@+id/register_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="註冊"
                android:layout_margin="15dp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>